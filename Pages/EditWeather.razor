@code {
    [Parameter]
    public WeatherForecast Weather { get; set; } = new WeatherForecast();

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
    void display() { }

    void Navigate()
    {
        uriHelper.NavigateTo("/fetachdata");
    }
